---
import CardsLan from "./CardsLan.astro";
import { getData } from "../lib/FetchData";

export const lanzamientos = await getData();
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    lanzamientos.map(
      ({ id, flight_number: FlightNumber, links, details, success }) => (
        <article>
          <CardsLan
            id={id}
            flightNumber={FlightNumber}
            img={links.patch.small}
            details={details}
            success={success}
          />
        </article>
      )
    )
  }
</div>
