---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import ScrollerComponent from "../components/componentsReact/slider";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Esta es una web para visualizar fotos con View Transitions"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-0 font-inter">
    <main class="max-w-6xl px-3 m-auto">
      <Header
        content="App para Visualizar Fotos"
        info="Toda la informacion sobre las fotos"
      />
      <slot />
      <ScrollerComponent client:visible />
    </main>
    <Footer />
    <style is:global>
      @font-face {
        font-family: "Inter-Bold";
        src: url("/fonts/Inter-Bold.woff2") format("woff2");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }
      html {
        background: #1c2029;
        background-size: 224px;
        color-scheme: dark light;
      }
    </style>
  </body>
</html>
