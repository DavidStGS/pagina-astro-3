---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Esta es una web para visualizar fotos con View Transitions"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-0">
    <main class="max-w-5xl px-3 m-auto">
      <Header
        content="App para Visualizar Fotos"
        info="Toda la informacion sobre las fotos"
      />
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #1c2029;
    background-size: 224px;
    color-scheme: dark light;
  }
</style>
